        <!--<StackView-->
            <!--android:id="@+id/sparkview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="150dp"-->
            <!--android:layout_weight="0.08" />-->
    <!--</LinearLayout>-->


    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_measure1"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textOff="Start"
        android:textOn="Stop" />

    <TextView
        android:text="Please keep your phone stable to start the measuring!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_notice"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/btn_measure1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/pb_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/tv_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_calDown"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/btn_calUp"
        android:layout_alignBottom="@+id/btn_calUp"
        android:layout_toLeftOf="@+id/btn_measure1"
        android:layout_toStartOf="@+id/btn_measure1" />

    <Button
        android:text="Increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_calUp"
        android:textAllCaps="false"
        android:layout_marginTop="55dp"
        android:cursorVisible="false"
        android:visibility="invisible"
        android:layout_below="@+id/pb_counter"
        android:layout_toRightOf="@+id/btn_measure1"
        android:layout_toEndOf="@+id/btn_measure1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_calDown"
        android:layout_alignStart="@+id/btn_calDown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pressure"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_calUp"
        android:layout_alignEnd="@+id/btn_calUp" />

</RelativeLayout>
